<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Attendance Viewer</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      margin: 0;
    }

    /* Sidebar */
    .sidebar {
      width: 220px;
      background: #f4f4f4;
      padding: 20px;
      height: 100vh;
      overflow-y: auto;
    }
    .sidebar h3 { margin-top: 0; }
    .sidebar ul { list-style: none; padding: 0; }
    .sidebar ul li { margin: 6px 0; }
    .sidebar ul li a {
      text-decoration: none;
      color: #333;
      padding: 4px 8px;
      display: block;
      border-radius: 4px;
    }
    .sidebar ul li a:hover,
    .sidebar ul li a.active {
      background: #007bff;
      color: white;
      font-weight: bold;
    }

    /* Content */
    .content {
      flex: 1;
      padding: 20px;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin-top: 20px;
    }
    table th, table td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }
    table th {
      background: #333;
      color: white;
    }

    input[type="date"] {
      padding: 6px;
      font-size: 16px;
      margin-bottom: 15px;
    }

    /* Calendar grid */
    .calendar {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 5px;
      margin-top: 20px;
    }
    .calendar div {
      padding: 10px;
      text-align: center;
      border: 1px solid #ccc;
      cursor: pointer;
      border-radius: 4px;
    }
    .calendar .today {
      background: #007bff;
      color: white;
      font-weight: bold;
    }
    .calendar .selected {
      border: 2px solid #007bff;
    }
  </style>
</head>
<body>

  <!-- Sidebar: Last 7 Days -->
  <div class="sidebar">
    <h3>Last 7 Days</h3>
    <ul>
      <% dates.forEach(d => { %>
        <li>
          <a href="/attendance-page/<%= d %>" class="<%= d === selectedDate ? 'active' : '' %>">
            <%= d %>
          </a>
        </li>
      <% }) %>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="content">
    <h2>Attendance for <%= selectedDate %></h2>

    <!-- Date Picker -->
    <input 
      type="date" 
      value="<%= selectedDate %>" 
      onchange="window.location.href='/attendance-page/' + this.value"
    />

    <!-- Calendar: Monthly View -->
    <div class="calendar">
      <% 
        const monthStart = new Date(selectedDate);
        monthStart.setDate(1);
        const month = monthStart.getMonth();
        const year = monthStart.getFullYear();
        const lastDay = new Date(year, month + 1, 0).getDate();
        const todayStr = new Date().toISOString().split('T')[0];

        for (let day = 1; day <= lastDay; day++) {
          const dateStr = `${year}-${(month+1).toString().padStart(2,'0')}-${day.toString().padStart(2,'0')}`;
          const isToday = dateStr === todayStr;
          const isSelected = dateStr === selectedDate;
      %>
        <div 
          class="<%= isToday ? 'today' : '' %> <%= isSelected ? 'selected' : '' %>"
          onclick="window.location.href='/attendance-page/<%= dateStr %>'"
        >
          <%= day %>
        </div>
      <% } %>
    </div>

    <!-- Attendance Table -->
    <% if (records.length === 0) { %>
      <p>No attendance records found for this date.</p>
    <% } else { %>
      <table>
        <tr>
          <th>Name</th>
          <th>Card UID</th>
          <th>In Time</th>
          <th>Out Time</th>
        </tr>
        <% records.forEach(r => { %>
          <tr>
            <td><%= r.name %></td>
            <td><%= r.cardUID %></td>
            <td><%= r.inTime %></td>
            <td><%= r.outTime || "-" %></td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

</body>
</html>
